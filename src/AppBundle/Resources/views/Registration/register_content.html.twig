{% trans_default_domain 'FOSUserBundle' %}

<div class="container login-page">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="{{ path('fos_user_security_login') }}" id="login-form-link">
                                {{ 'security.login.submit'|trans }}
                            </a>
                        </div>
                        <div class="col-xs-6">
                            <a href="{{ path('fos_user_registration_register') }}" class="active" id="register-form-link">
                                {{ 'registration.submit'|trans }}
                            </a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                                {{ include('AppBundle:Registration:registerform.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>