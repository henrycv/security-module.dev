{% extends 'base.html.twig' %}

{% block body %}
<div class="sm-user-crud">
    <h1>Action list</h1>

    <div class="table-responsive">
        <table class="table table-reflow">
            <thead>
                <tr>
                    <th class="hide-by-responsive">Idaction</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for action in actions %}
                <tr>
                    <td class="hide-by-responsive"><a href="{{ path('action_show', { 'id': action.idAction }) }}">{{ action.idAction }}</a></td>
                    <td>{{ action.name }}</td>
                    <td>
                        <div class="item-actions">
                            <a href="{{ path('action_show', { 'id': action.idAction }) }}" class="btn btn-sm btn-default">show</a>
                            <a href="{{ path('action_edit', { 'id': action.idAction }) }}" class="btn btn-sm btn-primary">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="section actions">
      <a href="{{ path('action_new') }}" class="btn btn-lg btn-success">
          <i class="fa fa-plus"></i> Create a new entry
      </a>
    </div>

</div>
{% endblock %}
